<div id="invest">
    <div class="modal fade" id="myModal2" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="myModalLabel">会员充值</h4>
                </div>

                @using (Ajax.BeginForm("Invest", "Member", new AjaxOptions() { UpdateTargetId = "memberlist", OnSuccess = "HideAdd()" }))
                {
                    @Html.Hidden("no");
                    <div class="modal-body">
                        <table class="table table-bordered">
                            <tr>
                                <td style="width:20%">姓名</td>
                                <td style="width:40%"><input name="name" type="text" class="form-control" disabled/></td>
                            </tr>

                            <tr>
                                <td>电话</td>
                                <td><input name="phonenum" type="text" class="form-control" disabled /></td>
                            </tr>

                            <tr>
                                <td>剩余金额</td>
                                <td>
                                    <div class="form-group">
                                        <div class="input-group">
                                            <div class="input-group-addon">¥</div>
                                            <input type="text" class="form-control" id="balance" name="balance" disabled>
                                            <div class="input-group-addon">.00</div>
                                        </div>
                                    </div>
                                </td>
                            </tr>

                            <tr>
                                <td>充值金额</td>
                                <td>
                                    <div class="form-group">
                                        <div class="input-group">
                                            <div class="input-group-addon">¥</div>
                                            <input type="text" class="form-control" id="intomoney" name="intomoney" placeholder="输入充值金额" value="0">
                                            <div class="input-group-addon">.00</div>
                                        </div>
                                    </div>
                                </td>
                            </tr>

                            <tr>
                                <td>剩余次数</td>
                                <td><input name="sycs" type="text" class="form-control" disabled /></td>
                            </tr>

                            <tr>
                                <td>充值次数</td>
                                <td>
                                    <select class="form-control" name="czcs" id="czcs">
                                        <option value="0">0</option>
                                        <option value="1">1</option>
                                        <option value="2">2</option>
                                        <option value="3">3</option>
                                        <option value="4">4</option>
                                        <option value="5">5</option>
                                    </select>
                                </td>
                                
                                <td><span id="czjine">0</span>元</td>
                            </tr>

                        </table>

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                        <button type="submit" class="btn btn-primary" onclick="return checkinvest()">提交更改</button>
                    </div>
                }

            </div><!-- /.modal-content -->
        </div><!-- /.modal -->
    </div>
</div>

