<div id="rates">
    <div class="modal fade" id="myModal3" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="myModalLabel">修改费率</h4>
                </div>

                @using (Ajax.BeginForm("Rates", "Member", new AjaxOptions() { UpdateTargetId = "memberlist", OnSuccess = "HideAdd()" }))
                {
                    <div class="modal-body">
                        <table class="table table-bordered">
                            <tr>
                                <td>普通费率</td>
                                <td>
                                    <div class="form-group">
                                        <div class="input-group">
                                            <div class="input-group-addon">¥</div>
                                            <input type="text" class="form-control" id="intomoney" name="rate1" placeholder="输入每小时价格" value="0">
                                            <div class="input-group-addon">/小时</div>
                                        </div>
                                    </div>
                                </td>
                            </tr>

                            <tr>
                                <td>单次价格</td>
                                <td>
                                    <div class="form-group">
                                        <div class="input-group">
                                            <div class="input-group-addon">¥</div>
                                            <input type="text" class="form-control" id="intomoney" name="rate2" placeholder="输入单次价格" value="0">
                                            <div class="input-group-addon">/一次</div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                     </table>

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                        <button type="submit" class="btn btn-primary">提交更改</button>
                    </div>
                }

            </div><!-- /.modal-content -->
        </div><!-- /.modal -->
    </div>
</div>

