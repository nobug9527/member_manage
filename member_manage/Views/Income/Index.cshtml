    <script src="~/js/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/js/jquery.validate.min.js"></script>
    <script src="~/js/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/echarts.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#chartstype").change(function () {
                var starttime = $("#starttime").val();
                var endtime = $("#endtime").val();
                var unit = $("#unittype").val();
                var mychart = echarts.init(document.getElementById('chart'));
                mychart.setOption({
                    title: {
                        text: '营业收入'
                    },
                    legend: {
                        data: ['营收']
                    },
                    tooltip: {},
                    xAxis: {
                        data: []
                    },
                    yAxis: {},
                    series: [{
                        name: '营收',
                        type:$("#chartstype").val(),
                        data: []
                    }]
                });
                //$.getJSON("/tools/submit_ajax.ashx?action=getoncemoney").done(function (result) {
                $.getJSON("/Income/GetIncome", { "starttime": starttime, "endtime": endtime, "unit": unit}).done(function (result) {
                    console.log(result)
                    //var obj = eval('(' + result + ')');
                    mychart.setOption({
                        xAxis: {
                            data: result.date
                        },
                        series: [{
                            name: '营收',
                            data: result.value
                        }]
                    })

                })
            })
        })

        function createcharts() {
            var starttime = $("#starttime").val();
            var endtime = $("#endtime").val();
            var unit = $("#unittype").val();
            var mychart = echarts.init(document.getElementById('chart'));
            mychart.setOption({
                title: {
                    text: '营业收入'
                },
                legend: {
                    data: ['营收']
                },
                tooltip: {},
                xAxis: {
                    data: []
                },
                yAxis: {},
                series: [{
                    name: '营收',
                    type: $("#chartstype").val(),
                    data: []
                }]
            });
            //$.getJSON("/tools/submit_ajax.ashx?action=getoncemoney").done(function (result) {
            $.getJSON("/Income/GetIncome",{"starttime":starttime,"endtime":endtime,"unit":unit}).done(function (result) {
                //console.log(result)
                //var obj = eval('(' + result + ')');
                mychart.setOption({
                    xAxis: {
                        data: result.date
                    },
                    series: [{
                        name: '营收',
                        data: result.value
                    }]
                })

            })
        }
    </script>
</head>
